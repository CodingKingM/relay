# Use Node base image
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json first for better caching
COPY package*.json ./

# Install dependencies (for development)
RUN npm install

# Copy the rest of the code
COPY . .

# Build argument for API URL configuration
ARG API_URL
ENV VITE_APP_API_URL=${API_URL:-http://localhost:8080/}

# Expose port 80 as required by the specification
EXPOSE 80

# For development only - keep container running without starting anything
CMD ["tail", "-f", "/dev/null"]


ENTRYPOINT ["npm", "run", "dev"]